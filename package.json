{
  "name": "nuxt-app",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "postinstall": "nuxt prepare",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix .",
    "preview": "nuxt preview",
    "typecheck": "vue-tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.6",
    "@nuxt/devtools": "latest",
    "@types/node": "^18",
    "eslint": "^8.44.0",
    "lint-staged": "^13.2.3",
    "nuxt": "^3.6.1",
    "simple-git-hooks": "^2.8.1",
    "vue-tsc": "^1.8.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
